	title = {Complex crystalline structures in a two-dimensional core-softened system},
	volume = {14},
	year = {2018}}

@article{VanHoang2019,
	abstract = {Via compression of 2D crystal with a square lattice
                 structure using molecular dynamics (MD) simulation, we
                 find a square-triangle (S-T) two-dimensional
                 solid-solid phase transition. Models contain 6400
                 identical particles interacted via so-called square
                 potential proposed by Rechtsman et al. (Phys. Rev. E
                 73, 011406 (2006)). This phase transition occurs in a
                 martensitic manner which involves local diffusionless
                 motion of the atoms and orientation between the parent
                 and product lattices is special of 45$\,^{\circ}$. The
                 new phase is a polycrystalline 2D crystal with a
                 triangle lattice structure. Via decompression of the
