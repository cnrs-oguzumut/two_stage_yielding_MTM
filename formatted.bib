	title = {Slip statistics of dislocation avalanches under different loading modes},
	volume = {91},
	year = {2015}}

@article{Maas2013-tq,
	abstract = {We report direct measurements of displacement jump
                 velocities in deforming nano- and microcrystals. These
                 velocities exhibit large scatter and no correlation
