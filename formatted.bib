@article{Ispanovity2014-ra,
	abstract = {We study the properties of strain bursts (dislocation
                 avalanches) occurring in two-dimensional discrete
                 dislocation dynamics models under quasistatic
                 stress-controlled loading. Contrary to previous
                 suggestions, the avalanche statistics differ
                 fundamentally from predictions obtained for the
