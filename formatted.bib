	keywords = {Crystal plasticity; Intragranular localization; Slip bands; Kink bands; FFT simulations},
	pages = {262--275},
	title = {Intragranular localization induced by softening crystal plasticity: Analysis of slip and kink bands localization modes from high resolution {FFT-simulations} results},
