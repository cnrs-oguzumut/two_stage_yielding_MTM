	volume = {49},
	year = {2001}}

@article{Kiener2011-hc,
	abstract = {In the present work we investigate the mechanical
                 properties of multiple slip oriented single crystal
                 Cu(100) compression samples to shed light on
                 size-dependent yield and hardening behavior at
                 small-scales. Samples with diameters ranging from 90nm
                 to 1700nm were fabricated using focused ion beam
                 milling and tested in situ in a transmission electron
                 microscope. The results demonstrate a dislocation
                 source-limited size-dependent yield strength, as
