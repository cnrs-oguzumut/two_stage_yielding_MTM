@article{Skaugen2018-ki,
	abstract = {A phase field model of a crystalline material at the
                 mesoscale is introduced to develop the necessary
                 theoretical framework to study plastic flow due to
                 dislocation motion. We first obtain the elastic stress
                 from the phase field free energy and show that it obeys
