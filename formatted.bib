@article{Zepeda-Ruiz2021-bm,
	abstract = {For millennia, humans have exploited the natural
                 property of metals to get stronger or harden when
                 mechanically deformed. Ultimately rooted in the motion
                 of dislocations, mechanisms of metal hardening have
                 remained in the cross-hairs of physical metallurgists
