@article{Zhang2017-mb,
	abstract = {Two dimensional hexagonal boron nitride (2D-hBN), an
                 isomorph of graphene with a very similar layered
                 structure, is uniquely featured by its exotic
                 opto-electrical properties together with mechanical
                 robustness, thermal stability, and chemical inertness.
