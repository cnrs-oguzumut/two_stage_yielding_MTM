@article{Hu2001-cp,
	abstract = {A diffuse-interface field model is proposed for
                 describing diffusional processes in coherent systems
                 with arbitrary microstructures and arbitrary spatial
                 distribution of structural defects such as
                 dislocations. It takes into account the effect of both
                 the coherency elastic energy of a microstructure and
                 the elastic coupling between the coherency strains and
