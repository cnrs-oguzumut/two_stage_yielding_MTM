	title = {Predicting dwell fatigue life in titanium alloys using modelling and experiment},
	volume = {11},
	year = {2020}}

@article{Xu2023-oo,
	abstract = {Slip intermittency and stress oscillations in titanium
                 alloy Ti--7Al--O that were observed using in-situ
                 far-field high energy X-ray diffraction microscopy
