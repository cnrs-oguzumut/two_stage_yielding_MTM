	title = {Effects of trapping dislocations within small crystals on their deformation behavior},
	volume = {57},
	year = {2009}}

@article{Li2004-vb,
	abstract = {The notion of theoretical strength, the critical
                 stress at which a perfect crystal under uniform loading
                 becomes structurally unstable, is extended to
                 non-uniform loading. A position-dependent defect
                 nucleation criterion has been derived and applied in
                 molecular dynamics (MD) and finite-element simulations
