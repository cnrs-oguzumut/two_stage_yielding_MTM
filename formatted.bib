@article{Antolovich2014-ki,
	abstract = {This article focuses on the mechanisms and
                 consequences of plastic strain localizations exhibited
                 in tensile stress--strain behaviors, fracture and
                 fatigue. A broad overview is first presented, including
                 important practical considerations and historical
                 background; then dislocation mechanics based details
                 are developed in subsequent sections. Material
