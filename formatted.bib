@article{Skogvoll2022-mm,
	abstract = {Abstract We derive a phase field crystal model that
                 couples the diffusive evolution of a microscopic
                 structure with the fast dynamics of a macroscopic
                 velocity field, explicitly accounting for the
                 relaxation of elastic excitations. This model captures
                 better than previous formulations the dynamics of
                 complex interfaces and dislocations in single crystals
