	date-modified = {2025-07-08 14:16:53 +0200},
	journal = {Materialia},
	keywords = {Deformation; Phase transition; Symmetry breaking; Crystalline defects; Metallic materials; Group theory},
	pages = {100588},
	publisher = {Elsevier},
	title = {A Cayley graph description of the symmetry breaking associated with deformation and structural phase transitions in metallic materials},
	volume = {9},
	year = {2020},
	bdsk-url-1 = {https://doi.org/10.1016/j.mtla.2020.100588}}

