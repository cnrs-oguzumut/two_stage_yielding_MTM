@article{Laio2002-ta,
	abstract = {We introduce a powerful method for exploring the
                 properties of the multidimensional free energy surfaces
                 (FESs) of complex many-body systems by means of
                 coarse-grained non-Markovian dynamics in the space
                 defined by a few collective coordinates. A
